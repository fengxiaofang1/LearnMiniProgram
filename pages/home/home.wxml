<!--pages/home/home.wxml-->
<text class="title">hello world</text>
<!-- 1.自定义组件的基本使用 -->
<my-cpn/>
<my-cpn></my-cpn>

<!-- 2.自定义组件的样式细节 
      2.1组件样式对外部样式的影响（class不会影响，id会）
      2.2外部样式对组件样式的影响（class不会影响，id会）
      2.3如何让class相互影响
          Component({
              options: {
                  styleIsolation: 'shared'
              }
          })
-->
<my-style/>

<!-- 3.给自定义组件传递数据/样式 -->
<my-prop title="哈哈哈" titleclass="red"/>
<my-prop title="呵呵呵" titleclass="green"/>
<my-prop titleclass="blue"/>

<!-- 4.组件内部发出事件 -->
<view>当前计数：{{counter}}</view>
<my-event bind:increment="handleIncrement"/>
<view>{{name}}</view>
<view>{{age}}</view>

<!-- 5.tab-control的练习 -->
<w-tab-control titles="{{['衣服', '裤子', '鞋子']}}"
                bind:itemclick='handleTabClick'/>

<!-- 6.直接选中组件修改数据/调用方法 -->
<my-sel class="sel_class" id="sel_id"/>
<button size="mini" bindtap="handleIncrementCpn">修改组件内的数据</button>

<!-- 7.插槽的使用 -->
<!-- 7.1单个插槽的使用 -->
<my-slot>
    <button size="mini">我是插入的按钮</button>
</my-slot>

<my-slot>
    <text>哈哈哈哈哈哈</text>
</my-slot>

<my-slot>
    <slider value="60"></slider>
</my-slot>

<!-- 7.2多个插槽的使用 
    注意事项：
        1.给每一个插槽起一个名字：name属性
        2.必须在Component对象中添加一个选项：options ->multipleSlots: true
-->
<my-slot>
    <button size="mini" slot="slot2">我是插入的按钮</button>
    <slider slot="slot1"></slider>
    <text slot="slot3">哈哈哈哈</text>
</my-slot>