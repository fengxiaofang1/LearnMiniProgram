<!--pages/view/view.wxml-->
<!-- 1.view基本使用 -->
<view>哈哈哈</view>
<view>呵呵呵</view>

<!-- 2.hover-class: 指定按下去的样式类。当 hover-class="none" 时，没有点击态效果 -->
<view class="box1" 
      hover-class="hover_view" 
      hover-stay-time="0">
    box1
</view>

<!-- 3.hover-stop-propagation: 指定是否阻止本节点的祖先节点出现点击态 -->
<view class="box2" hover-class="box2_hover">
 <view class="box1" 
      hover-class="hover_view" 
      hover-stay-time="0"
      hover-stop-propagation="true">
    box1
  </view>
</view>